#!/usr/bin/env nix-shell
#!nix-shell -i fish -p fish

function nix_edit_home
    set -lx FISH_COMMAND_NOT_FOUND_AUTO_TRY_NIXPKGS true

    set -gq FLAKE;  or set -lx FLAKE "~/.config/home-manager"
    set -gq PAGER;  or set -lx PAGER bat
    set -gq EDITOR; or set -lx EDITOR nvim
    

    home-manager edit --flake "$FLAKE" 
    alejandra "$FLAKE"

    # returns 0 if no diff detected
    git -C (realpath "$FLAKE") diff -U0 *.nix
    # nothing more to do so exit succes
    and return 0

    # changes detected, so we update
    nixup
    and return 0
    
    # if we get here then the upgrad must have failed.
    grep --color error "$FLAKE/nh-home-switch.log"
    return 1
end

nix_edit_home $argv
