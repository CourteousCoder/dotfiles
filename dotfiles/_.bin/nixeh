#!/usr/bin/env nix-shell
#!nix-shell -i bash -p bash bat git home-manager neovim nh util-linux

set -e

check_dependencies() {
	echo "INFO: Checking dependencies..."
	local commands=( 'bash' 'bat' 'cat' 'column' 'false' 'git' 'grep' 'head' 'home-manager' 'nh' 'nvim' "$EDITOR" "$PAGER" )
	$(for cmd in "${commands[@]}"
	do
		echo -n "INFO: ${cmd}:|"
		command -v "$cmd" > /dev/null && echo 'Available'
	done) | column -ts '|'
}

check_dependencies | column -ts '\t'
 

FALLBACK_EDITOR=nvim
export EDITOR=${EDITOR:-$FALLBACK_EDITOR}

FALLBACK_PAGER=bat
export ${PAGER:-$FALLBACK_PAGER}

dotfiles=~/.dotfiles

pushd "$dotfiles"

home-manager edit
git diff -U0 *.nix

echo "Rebuilding Nix home manager..."
nh home switch "$dotfiles" &>nh-home-switch.log || (
  cat nh-home-switch.log | grep --color error && false)

gen="$(home-manager generations | head -n 1)"
git commit -am "$gen"

popd
